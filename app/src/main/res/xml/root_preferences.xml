<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/location_header">

        <SwitchPreference
            app:defaultValue="true"
            app:key="@string/location_key"
            app:title="@string/location_title" />
        <EditTextPreference
            app:defaultValue="@string/speed_threshold_default_value"
            app:dependency="location"
            app:icon="@drawable/ic_baseline_speed_24"
            app:key="@string/speed_threshold_key"
            app:title="@string/speed_threshold_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/activity_recognition_header">

        <SwitchPreference
            app:defaultValue="true"
            app:key="@string/activity_recognition_key"
            app:summary="@string/activity_recognition_summary"
            app:title="@string/activity_recognition_title_with_location" />
        <CheckBoxPreference
            app:defaultValue="true"
            app:dependency="@string/activity_recognition_key"
            app:icon="@drawable/ic_baseline_directions_car_24"
            app:key="@string/in_vehicle_key"
            app:title="@string/in_vehicle_title" />
        <CheckBoxPreference
            app:defaultValue="true"
            app:dependency="@string/activity_recognition_key"
            app:icon="@drawable/ic_baseline_pedal_bike_24"
            app:key="@string/on_bicycle_key"
            app:title="@string/on_bicycle_title" />
        <CheckBoxPreference
            app:defaultValue="false"
            app:dependency="@string/activity_recognition_key"
            app:icon="@drawable/ic_baseline_directions_run_24"
            app:key="@string/running_key"
            app:title="@string/running_title" />
        <CheckBoxPreference
            app:defaultValue="false"
            app:dependency="@string/activity_recognition_key"
            app:icon="@drawable/ic_baseline_directions_walk_24"
            app:key="@string/walking_key"
            app:title="@string/walking_title" />
    </PreferenceCategory>

</PreferenceScreen>